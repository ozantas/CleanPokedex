<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CleanPokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryVariant">@color/blue700</item>
        <item name="colorOnPrimary">@color/gray300</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal500</item>
        <item name="colorSecondaryVariant">@color/teal700</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/gray100</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="theme_background">
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="card_pokemon_list">
        <item name="cardCornerRadius">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="tv_pokemon_name_detail">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/gray800</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="tv_pokemon_stat_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray600</item>
    </style>

    <style name="tv_pokemon_type">
        <item name="android:textColor">@color/gray400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_pokemon_id">
        <item name="android:textColor">@color/gray600</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="tv_physical_info">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray600</item>
    </style>

</resources>